<Window x:Class="Calculator_LearningActivity_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator_LearningActivity_5"
        mc:Ignorable="d"
        Title="Calculator" Height="420" Width="275"
        Background="#111">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Label Foreground="LightGray" Grid.Row="1" Grid.Column="4" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Height="42" Width="22">0</Label>
        
        <Button x:Name="switchPlusMinus" Content="+/-" Grid.Row="6" Grid.Column="1" Background="#333" BorderBrush="#000" Foreground="LightGray"/>
        <Button x:Name="zero" Content="0" Grid.Row="6" Grid.Column="2" Background="#333" BorderBrush="#000" Foreground="LightGray"/>
        <Button x:Name="dot" Content="." Grid.Row="6" Grid.Column="3" Background="#333" BorderBrush="#000" Foreground="LightGray"/>
        <Button x:Name="equal" Content="=" Grid.Row="6" Grid.Column="4" BorderBrush="#000" Foreground="LightGray" Background="#FF333333"/>

        <Button x:Name="one" Content="1" Grid.Row="5" Grid.Column="1" Background="#333" BorderBrush="#000" Foreground="LightGray"/>
        <Button x:Name="two" Content="2" Grid.Row="5" Grid.Column="2" Background="#333" BorderBrush="#000" Foreground="LightGray"/>
        <Button x:Name="three" Content="3" Grid.Row="5" Grid.Column="3" Background="#333" BorderBrush="#000" Foreground="LightGray"/>
        <Button x:Name="plus" Content="+" Grid.Row="5" Grid.Column="4" Background="#333" BorderBrush="#000" Foreground="LightGray" />

        <Button x:Name="four" Content="4" Grid.Row="4" Grid.Column="1" Background="#333" BorderBrush="#000" Foreground="LightGray"/>
        <Button x:Name="five" Content="5" Grid.Row="4" Grid.Column="2" Background="#333" BorderBrush="#000" Foreground="LightGray"/>
        <Button x:Name="six" Content="6" Grid.Row="4" Grid.Column="3" Background="#333" BorderBrush="#000" Foreground="LightGray"/>
        <Button x:Name="minus" Content="-" Grid.Row="4" Grid.Column="4" Background="#333" BorderBrush="#000" Foreground="LightGray"/>

        <Button x:Name="seven" Content="7" Grid.Row="3" Grid.Column="1" Background="#333" BorderBrush="#000" Foreground="LightGray"/>
        <Button x:Name="eight" Content="8" Grid.Row="3" Grid.Column="2" Background="#333" BorderBrush="#000" Foreground="LightGray"/>
        <Button x:Name="nine" Content="9" Grid.Row="3" Grid.Column="3" Background="#333" BorderBrush="#000" Foreground="LightGray"/>
        <Button x:Name="times" Content="-" Grid.Row="3" Grid.Column="4" Background="#333" BorderBrush="#000" Foreground="LightGray"/>

        <Button x:Name="divide" Content="/" Grid.Row="2" Grid.Column="4" Background="#333" BorderBrush="#000" Foreground="LightGray"/>

    </Grid>
</Window>
